<div class="modal-content" data-test-modal="regenerate-staff-token">
    <header class="modal-header">
        <h1>{{t "Manual.Components.Regenerate_your_Staff_Access_Token"}}</h1>
    </header>
    <button type="button" class="close" title="Close" {{on "click" @close}}>{{svg-jar "close"}}<span class="hidden">{{t "Manual.Settings.Close"}}</span></button>

    <div class="modal-body">
        <p>
            {{t "Manual.Components.You_can_regenerate_your_Staff_Access_Token_any_time,_but_any_scripts_or_applications_using_it_will_need_to_be_updated"}}
        </p>
        {{#if this.errorMessage}}
            <p class='red'> {{this.errorMessage}}</p>
        {{/if}}
    </div>

    <div class="modal-footer">
        <button class="gh-btn" type="button" {{on "click" @close}}><span>{{t "Manual.Components.Cancel"}}</span></button>
        <button class="gh-btn gh-btn-icon gh-btn-red" type="button" {{on "click" this.regenerateStaffToken}}>
            <span>{{t "Manual.Components.Regenerate_your_Staff_Access_Token"}}</span>
        </button>
    </div>
</div>