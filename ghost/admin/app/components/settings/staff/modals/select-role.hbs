<div class="modal-content" data-test-modal="select-role">
    <header class="modal-header">
        <h1>{{t "Manual.Components.Change_user_role"}}</h1>
    </header>
    <button type="button" class="close" title="Close" {{on "click" @close}}>{{svg-jar "close"}}<span class="hidden">{{t "Manual.Settings.Close"}}</span></button>

    <div class="modal-body">
        <GhRoleSelection
            @selected={{this.role}}
            @setRole={{fn (mut this.role)}}
        />
    </div>

    <div class="modal-footer">
        <button class="gh-btn" type="button" {{on "click" @close}}><span>{{t "Manual.Components.Cancel"}}</span></button>
        <button class="gh-btn gh-btn-black" type="button" {{on "click" (fn @close this.role)}}><span>{{t "Manual.Components.Change_role"}}</span></button>
    </div>
</div>