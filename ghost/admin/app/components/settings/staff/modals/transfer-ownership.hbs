<div class="modal-content" data-test-modal="transfer-owner">
    <header class="modal-header">
        <h1>{{t "Manual.Components.Transfer_Ownership"}}</h1>
    </header>
    <button type="button" class="close" title="Close" {{on "click" @close}}>{{svg-jar "close"}}<span class="hidden">{{t "Manual.Settings.Close"}}</span></button>

    <div class="modal-body">
        <p>
            {{t "Manual.Components.Are_you_sure_you_want_to_transfer_the_ownership_of_this_blog"}}
            {{t "Manual.Components.You_will_not_be_able_to_undo_this_action"}}
        </p>
    </div>

    <div class="modal-footer">
        <button class="gh-btn" type="button" {{on "click" @close}}><span>{{t "Manual.Components.Cancel"}}</span></button>
        <GhTaskButton
            @buttonText={{t "Manual.Components.Yep_-_I'm_sure"}}
            @task={{this.transferOwnershipTask}}
            @class="gh-btn gh-btn-red gh-btn-icon"
        />
    </div>
</div>