<div class="modal-content">
    <header class="modal-header">
        <h1>{{t "Manual.Components.Are_you_sure_you_want_to_leave_this_page?"}}</h1>
    </header>
    <button class="close" title="Close" type="button" {{on "click" @close}}>{{svg-jar "close"}}<span class="hidden">{{t "Manual.Components.Close"}}</span></button>

    <div class="modal-body">
        <p>
            {{t "Manual.Components.Hey_there!_It_looks_like_you're_in_the_middle_of_writing_something_and_you_haven't_saved_all_of_your_content."}}
        </p>

        <p>{{t "Manual.Components.Save_before_you_go!"}}</p>
    </div>

    <div class="modal-footer">
        <button class="gh-btn" type="button" {{on "click" @close}}><span>{{t "Manual.Components.Stay"}}</span></button>
        <button class="gh-btn gh-btn-red" type="button" {{on "click" (fn @close true)}}><span>{{t "Manual.Components.Leave"}}</span></button>
    </div>

</div>